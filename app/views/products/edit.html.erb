      <%= f.label "Nombre: " %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "DescripciÃ³n: " %>
      <%= f.text_area :description, class: "form-control", rows: "3" %>
    </div>
    <div class="form-group">
      <%= f.label "Valor: " %>
      <%= f.text_field :cost, class: "form-control" %>
