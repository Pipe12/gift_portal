<div class="box">
  <div id="head2">
    <span class="h2">Productos</span>
    <%= link_to 'Crear', new_product_path, class: "btn btn-primary btn-sm", id: "btn-right" %>
  </div> 
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombre</th>
        <th scope="col">Descripti√≥n</th>
        <th scope="col">Valor</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
          <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.cost %></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
            <td><%= link_to 'ver', product_path(product) %></td>  
            <td><%= link_to 'Eliminar', product_path(product),
                    method: :delete,
                    data: { confirm: 'Esta seguro ?'} %></td>
          </tr>
      <%end %>
    </tbody>
  </table>  
</div>