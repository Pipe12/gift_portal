<div class="box">
  <div id="head2">
    <span class="h2">Categorias</span>
    <%= link_to "Crear", new_category_path, class: "btn btn-primary btn-sm", id: "btn-right" %>
  </div> 

  <div id="category-list-container" class="mt-3">
    <ul id="category-list">
      <% @categories.each do |category| %>
        <li id="category-item">
          <div id="category-info">
            <div id="flex1">
              <div id="data">
                <h4>ID: <%= category.id %></h4>
                <h4>Nombre: <%= category.name %></h4>
              </div>

              <div id="actions">
               <%= link_to (fa_icon "pencil"), edit_category_path(category), id: "action" %>
               <%= link_to (fa_icon "trash"), category_path(category),
                                       method: :delete,
                                       data: { confirm: 'Esta seguro ?'}, id: "action" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>  
</div>